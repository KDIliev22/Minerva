{
  "name": "minerva",
  "version": "1.0.0",
  "description": "P2P Music Sharing App",
  "author": {
    "name": "Minerva Team",
    "email": "minerva@example.com"
  },
  "homepage": "https://github.com/minerva-p2p/minerva",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux",
    "dist:win": "electron-builder --win"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.5",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.minerva.p2p",
    "productName": "Minerva",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "js/**/*",
      "css/**/*",
      "assets/**/*",
      "*.png"
    ],
    "extraResources": [
      {
        "from": "backend/minerva-backend.jar",
        "to": "backend/minerva-backend.jar"
      }
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Audio",
      "executableArgs": ["--no-sandbox"],
      "extraResources": [
        {
          "from": "backend/jre-linux",
          "to": "backend/jre",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "extraResources": [
        {
          "from": "backend/jre-win",
          "to": "backend/jre",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "backend/start-backend.vbs",
          "to": "backend/start-backend.vbs"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "include": "scripts/installer.nsh"
    },
    "deb": {
      "afterInstall": "scripts/afterInstall.sh",
      "afterRemove": "scripts/afterRemove.sh"
    }
  }
}
